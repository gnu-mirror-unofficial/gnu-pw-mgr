readonly testname=`basename $0`
set -x

. "${srcdir}/test.funs"

ck_test() {
    for f
    do
        ct=`grep -F "$f" "${TEST_HOME}/.local/gnupwmgr.cfg" | wc -l` || \
            die "'$f' not found in ${TEST_HOME}/.local/gnupwmgr.cfg"
        test $ct -eq 1 || \
            die "$ct '$f'-s in ${TEST_HOME}/.local/gnupwmgr.cfg"
    done
}

run_test() {
    set -e
    cfgfile="${TEST_HOME}/.local/gnupwmgr.cfg"
    $gpw -t 'TEST ONLY TAG' --text \
        'This is only a test.  Were it real, you would likely know.  It is not.'
    test -f "${cfgfile}" || \
        die "config file not created:  ${TEST_HOME}/.local/gnupwmgr.cfg"
    ck_test 'TEST ONLY TAG'

    samp='JvyFIc2bRvUPRDCK'
    f=`$gpw --rehash=1 -i 'test-tag' who | \
        awk '/TEST ONLY TAG/{print $4}'`
    test "X$f" = "X$samp" || \
        die $'results differ\n'"$samp became $f"
    ck_test 'TEST ONLY TAG' "login-id  = 'test-tag'"

    # Confirmation question test
    #
    samp='jfiscesagqka'
    f=`$gpw --confirm dog who | \
        awk '/TEST ONLY TAG/{print $4}'`
    test "X$f" = "X$samp" || \
        die $'results for "--confirm dog" differ\n'"'$samp' became '$f'"

    samp='uvflfqdrjepf'
    f=`$gpw --confirm pet who | \
        awk '/TEST ONLY TAG/{print $4}'`
    test "X$f" = "X$samp" || \
        die $'results for "--confirm pet" differ\n'"$samp became $f"

    # *OLD* confirmation question test
    #
    samp='acvrtafnqwmf'
    f=`$gpw --old-confirm dog who | \
        awk '/TEST ONLY TAG/{print $4}'`
    test "X$f" = "X$samp" || \
        die $'results for "--old-confirm dog" differ\n'"'$samp' became '$f'"

    samp='pihehbdnfnlf'
    f=`$gpw --old-confirm pet who | \
        awk '/TEST ONLY TAG/{print $4}'`
    test "X$f" = "X$samp" || \
        die $'results for "--old-confirm pet" differ\n'"$samp became $f"

    # Triplet fixup test
    #
    trial='try 85'
    samp='2Tjzv7jAvnZf2J5eaEoIFLn+8E3UNGPmGJ0uuu3K'
    f=`$gpw --rehash=1 -l40 $trial | awk '/uuu/{print $4}'`
    test "X$f" = "X$samp" || \
        die "wrong password found"

    samp=`echo "$samp" | sed 's/uuu/uuv/'`
    f=`$gpw --cclass no-trip $trial | awk '/uuv/{print $4}'`
    test "X$f" = "X$samp" || \
        die "wrong tweaked password found"

    # selective chars fixup test
    # test "X$f" = "X${samp:23:1}${samp:15:1}${samp:7:1}${samp:2:1}" 
    #
    f=`$gpw --sel=24,16,8,3 $trial | awk '/TEST ONLY/{print $4}'`
    test "X$f" = "X+eAj" || \
        die "selection inconsistency"

    samp=lMZ0FiVY
    f=`$gpw --cc=two-digit $trial 2 | awk '/TEST ONLY/{print $4}'`
    test "X$f" = "X$samp" && \
        die "requiring two digits failed"

    # Sequential fixup test
    #
    trial='XX try 10185'
    samp='3AOS5o5011OuzGYlFrLI4B2FGHopslkngfRTdIHi'
    f=`$gpw -l40 --cc=no-spec $trial | awk '/TEST ONLY/{print $4}'`
    test "X$f" = "X$samp" || \
        die "PBKDF2 inconsistency"

    samp=$(echo $samp | sed 's/FGH/FKH/')
    f=`$gpw --cc=no-spec+no-seq $trial | awk '/TEST ONLY/{print $4}'`
    test "X$f" = "X$samp" || \
        die "PBKDF2 inconsistency"

    $gpw -t 'TEST ONLY TAG'
    test -f "${cfgfile}" || \
        die "config file removed:  ${TEST_HOME}/.local/gnupwmgr.cfg"
    grep -F 'TEST ONLY TAG'  "${cfgfile}" && \
        die "'TEST ONLY TAG' seed remains in config file"

    set +e
}

init_test
trap die 0
run_test
trap '' 0
cleanup
exit 0
